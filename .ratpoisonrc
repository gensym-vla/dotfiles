# autostarts
alias term exec urxvt


exec xsetroot -bg black -cursor_name left_ptr
exec setxkbmap tr
startup_message off
exec feh --bg-scale ~/images/wallpapers/vlad*
#exec xcompmgr -cf
exec ratpoison -c "echo $(fortune | sed 's/[\t%]//')"
exec synclient VertEdgeScroll=0 
exec synclient TapButtom3=3 
exec synclient TapButton4=4
#exec i3status -c ~/.i3/i3status.conf | dzen2
warp on
rudeness 13

escape M-1
set fgcolor #c8f526
set bgcolor #101010
set input width 300
set border 0 0
set fwcolor red
set padding 0 0 0 0
set barpadding 0 0
set framesels 123456789
set winname class

definekey top M-F1 exec ratpoison -c "echo Layout 0" -c "select -" -c "only" -c "next"
definekey top M-F2 exec ratpoison -c "echo Layout 1" -c "select -" -c "hsplit" -c "next"
definekey top M-F3 exec ratpoison -c "echo Layout 2" -c "select -" -c "vsplit" -c "next"
definekey top XF86AudioMute exec amixer set Master toggle & ratpoison -c "echo Mute Toggled"
definekey top XF86AudioRaiseVolume exec amixer set Master 5%+ & ratpoison -c "echo $( amixer get Master | perl -ne 'if(/(\d+%)/){print $1."\n";last;}')"
definekey top XF86AudioLowerVolume exec amixer set Master 5%- & ratpoison -c "echo $( amixer get Master | perl -ne 'if(/(\d+%)/){print $1."\n";last;}')"
definekey top M-h exec ratpoison -c "removeleft"
definekey top M-j exec ratpoison -c "removedown"
definekey top M-k exec ratpoison -c "removeup"
definekey top M-l exec ratpoison -c "removeright"
definekey top Print exec scrot -e 'mv $f ~/images/'
set font "clean:size=10"
bind semicolon colon
bind colon exec
bind r restart
bind b exec  ratpoison -c "echo $(acpi)"
bind f exec ratpoison -c "echo $(fortune | sed 's/\t//')"

gnewbg 1
gnewbg 2
gnewbg 3
gnewbg 4
gselect 0
